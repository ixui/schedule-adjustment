<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.ixui.scheduleadjustment.mapper.CommentMapper">
  <select id="selectComment" resultType="Comment">
    select  comment.participant_comment,employee_master.emp_name
    	from comment
    		inner join employee_master
    			on comment.emp_num = employee_master.emp_num
    	where event_id = #{id}
    	order by comment.commment_id
  </select>

