<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment.mapper">
  <select id="selectComment" resultType="map">
    select  comment,emp_name
    	from comment
    		inner join employee_master
    			on comment.emp_num = employee_master.emp.num
    	where event_id = #{parameter.event_id}
    	order by comment_id ;
  </select>

  <insert id="insertComment" parameterType="Comment" useGeneratedKeys="true" keyProperty="comment_id">
    insert
    into comment(event_id,emp_num,comment)
    values(#{event_id},#{emp_num},#{comment})
  </insert>
</mapper>